# EMS v1 PostgreSQL Configuration
# Copy this file to .env and update with your actual values

# PostgreSQL Master Configuration
POSTGRES_MASTER_USER=postgres
POSTGRES_MASTER_PASSWORD=CHANGE_ME_P@ssw0rd
POSTGRES_MASTER_PORT=5433

# Authentication Method
POSTGRES_MASTER_HOST_AUTH_METHOD="scram-sha-256\nhost replication replicator 0.0.0.0/0 md5"
POSTGRES_MASTER_INITDB_ARGS="--auth-host=scram-sha-256"

# Discord Webhook for Notifications
# Get your webhook URL from Discord: Server Settings → Integrations → Webhooks
# Example: https://discord.com/api/webhooks/123456789/abcdefghijklmnop
DISCORD_WEBHOOK_URL=

# Backup Configuration
BACKUP_RETENTION_FULL=4

# Backup Encryption Key
# IMPORTANT: Generate a strong encryption key
# Example: openssl rand -base64 32
BACKUP_ENCRYPTION_KEY=CHANGE_ME_GenerateRandomKey
